<Window x:Class="DataBindingAndUpdateSourceTrigger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingAndUpdateSourceTrigger"
        mc:Ignorable="d"
        Title="Shopping platform" Height="800" Width="600"
        ResizeMode="NoResize"
        >
    
    <Grid>
        <Label Content="Welcom to my store" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top" Width="135" FontSize="14"/>
        <Button x:Name="ButtonShowItems" Content="Show items" Margin="124,205,0,0" Click="Button_Click_Show_Items" FontSize="14" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="102"/>
        <Button x:Name="ButtonAddItem" Content="Add item" Margin="0,205,101,0" Click="Button_Click_Add_Item" FontSize="14" Height="38" VerticalAlignment="Top" HorizontalAlignment="Right" Width="102"/>
        <Button x:Name="ButtonClose" Content="Close" Margin="32,0,0,28" Click="Button_Click_Close" FontSize="14" HorizontalAlignment="Left" Width="102" Height="38" VerticalAlignment="Bottom"/>
        <Label Content="{Binding Path=Test, Mode=TwoWay}" HorizontalAlignment="Left" Margin="274,402,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>

