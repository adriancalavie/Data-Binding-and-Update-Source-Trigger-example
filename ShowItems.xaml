<Window x:Class="DataBindingAndUpdateSourceTrigger.ShowItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingAndUpdateSourceTrigger"
        mc:Ignorable="d"
        Title="ShowItems" 
        Height="800" Width="600"
        ResizeMode="NoResize">



    <Grid>
        <Label Content="List of items for sale:" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Width="192" Height="39" FontSize="20"/>
        <CheckBox Content="Group by category" HorizontalAlignment="Left" Margin="34,144,0,0" VerticalAlignment="Top" FontSize="14" Width="144" RenderTransformOrigin="0.16,0.444"/>
        <CheckBox Content="Sort by high price" HorizontalAlignment="Left" Margin="230,144,0,0" VerticalAlignment="Top" FontSize="14" Width="144" RenderTransformOrigin="0.16,0.444"/>
        <CheckBox Content="Sort by low price" HorizontalAlignment="Left" Margin="411,144,0,0" VerticalAlignment="Top" FontSize="14" Width="144" RenderTransformOrigin="0.16,0.444"/>
        <ListBox x:Name="ListBoxItems" AutomationProperties.Name="List of Items For Sale" Margin="0,185,0,190"/>


    </Grid>
</Window>

